<div id="animedetailwrap" style="background-image: url(/assets/back.jpg);">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <h1>アニメタイトル一覧</h1>
        <h4>ここはあってもいみないかも</h4>
      </div>
    </div><! --/row -->
  </div> <!-- /container -->
</div><! --/headerwrap -->

<div class="container">
  <h1><%= @anime_title.title %> Listing Anime Details</h1>
  <p id="notice"><%= notice %></p>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-condensed newline">
      <thead>
        <tr>
          <!-- Anime titleは非表示 -->
          <th colspan="1"></th>
          <th class="col-xs-2 col-ms-2 col-md-2 col-lg-1">Profile</th>
          <th class="col-xs-2 col-ms-2 col-md-2 col-lg-2">Op title</th>
          <th class="col-xs-1 col-ms-1 col-md-1 col-lg-2">Op artist</th>
          <th class="col-xs-1 col-ms-1 col-md-1 col-lg-1">Op movie</th>
          <th class="col-xs-2 col-ms-2 col-md-2 col-lg-2">Ed title</th>
          <th class="col-xs-1 col-ms-1 col-md-1 col-lg-2">Ed artist</th>
          <th class="col-xs-1 col-ms-1 col-md-1 col-lg-1">Ed movie</th>
        </tr>
      </thead>

      <tbody>
        <% @anime_details.each do |anime_detail| %>
          <tr>
            <!-- anime_detail.anime_title_id は非表示 %-->
            <td class="col-xs-1 col-ms-1 col-md-1 col-lg-1">
              <%= link_to '表示', action: :show, anime_title_id: anime_detail.anime_title_id, id: anime_detail.id %><br>
              <%= link_to '編集', action: :edit, anime_title_id: anime_detail.anime_title_id, id: anime_detail.id %><br>
              <%= link_to '削除', {action: :destroy, anime_title_id: anime_detail.anime_title_id, id: anime_detail.id}, {method: :delete, data: {confirm: '削除してよろしいですか？'}} %>
            </td>
            <td class="col-xs-2 col-ms-2 col-md-2 col-lg-1 fontmini"><%= anime_detail.profile %></td>
            <td class="col-xs-2 col-ms-2 col-md-2 col-lg-2"><%= anime_detail.op_title %></td>
            <td class="col-xs-1 col-ms-1 col-md-1 col-lg-2"><%= anime_detail.op_artist %></td>
            <td class="col-xs-1 col-ms-1 col-md-1 col-lg-1 fontmini"><%= anime_detail.op_movie %></td>
            <td class="col-xs-2 col-ms-2 col-md-2 col-lg-2"><%= anime_detail.ed_title %></td>
            <td class="col-xs-1 col-ms-1 col-md-1 col-lg-2"><%= anime_detail.ed_artist %></td>
            <td class="col-xs-1 col-ms-1 col-md-1 col-lg-1 fontmini"><%= anime_detail.ed_movie %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


<br>

